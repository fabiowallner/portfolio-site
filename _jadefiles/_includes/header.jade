mixin nav-content()
  ul
    li: a(href="#about-me") About
    li: a(href="#my-work") Work
    li: a(href="#contact") Contact
    li: a(href="/blog/") Blog
    li: a.lang-switch(href="/de") DE
    li: a.lang-switch(href="/en") EN


.mobile-nav
  +nav-content()

header

  h1.logo Fabio Wallner
  
  nav.site-nav
    
    +nav-content()
      
    .mobile-nav-toggle: span
